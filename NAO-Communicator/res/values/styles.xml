<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="SectionHeader" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/lightblue</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:drawableEnd">@drawable/ic_action_expand</item>
        <item name="android:layout_marginTop">@dimen/margin_section_header</item>
        <item name="android:layout_marginBottom">@dimen/margin_section_header</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:padding">@dimen/padding_section_header</item>
    </style>

    <style name="Text" parent="@android:style/TextAppearance.DeviceDefault.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_text</item>
    </style>

    <style name="ItemTitle" parent="@android:style/TextAppearance.DeviceDefault.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="MenuTitle" parent="@android:style/TextAppearance.DeviceDefault.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/darkblue</item>
        <item name="android:padding">@dimen/padding_section_header</item>
        <item name="android:drawableStart">@drawable/ic_action_next_item</item>
    </style>

    <style name="Button">
        <item name="android:background">@color/lightblue</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:layout_margin">@dimen/margin_button</item>
    </style>

</resources>